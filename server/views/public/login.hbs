<div class="container auth">
  <div class="section">
    <div class="row center">
      <div class="col offset-l3 l6 offset-m2 m8 offset-s1 s10">
        <h3>Fa√ßa o login</h3>

        <div class="row">
          <a href="/auth/facebook">
            <button class="btn btn-block waves-effect waves-light blue darken-4" type="submit">Entre com
              Facebook</button>
          </a>
        </div>

        <div class="row">
          <p>ou coloque os dados abaixo para entrar<p>
              <form action="/auth/login" method="POST">
                {{#if errorMessage}}
                <div>
                  <p class="error-message">{{errorMessage}}</p>
                </div>
                {{/if}}
                <div class="input-field">
                  {{!-- <i class="material-icons prefix">account_circle</i> --}}
                  <input name="username" id="username" type="text" class="validate">
                  <label for="username">Username</label>
                </div>

                <div class="input-field">
                  {{!-- <i class="material-icons prefix">https</i> --}}
                  <input name="password" id="password" type="password" class="validate">
                  <label for="password">Password</label>
                </div>

                <button id="submit--login" class="btn btn-block waves-effect waves-light" type="submit">Entrar</button>

              </form>
        </div>
      </div>

    </div>
  </div>
</div>

