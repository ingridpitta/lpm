<div class="container auth">
    <div class="section">
        <div class="row center">
            <div class="col offset-l3 l6 offset-m2 m8 offset-s1 s10">
                <h3>Transações</h3>
            </div>
            <div class="row">
                {{#if deals}}
                <div class="col l12 m12 s12">
                    <div class="row center-cols left-align">
                        {{#each deals}}
                        <div class="col l4 m10 s10">
                            <div class="card">
                                <h5>Código da transação: {{this._id}}</h5>
                                <h5>Situação: {{this.condition}}</h5>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{else}}
                <div class="col l12 m12 s12">
                    <h5>Nenhuma transação cadastrada.</h5>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

